import java.io.*;
import java.net.*;
import java.util.StringTokenizer;

public class NameSend {
	Socket socket;
	Server server;
	String msg;
	StringTokenizer st;
	
	NameSend(Socket _s, String _m, Server _ss){
		socket = _s;
		msg = _m;
		server = _ss;
		
		st = new StringTokenizer(msg, "!");
		String tag = st.nextToken();
		server.c.uName=st.nextToken();
		
		
		try {
			OutputStream outStream = socket.getOutputStream();
			DataOutputStream dataOutStream = new DataOutputStream(outStream);
			
			if(Check(id, pass)) {
				
				dataOutStream.writeUTF(confirmTag);
			}
			else {
				System.out.println("Server > 로그인 확인 실패 ");
				dataOutStream.writeUTF(failedTag);
			}
			
		}catch(Exception e) {
			System.out.println("Server > 로그인 확인 정보 전송 오류 ");
		}
	}
}
